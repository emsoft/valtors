{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "declaration": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es5", "es2015"]
  },
  "include": ["./**/*"],
  "exclude": ["*/test/**"],
  "files": ["./src/index.ts"]
}
